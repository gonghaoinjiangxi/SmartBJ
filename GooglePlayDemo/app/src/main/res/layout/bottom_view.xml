<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="@dimen/smaller_size"
              android:orientation="horizontal"
              android:background="@drawable/detail_bottom_bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <Button
        android:id="@+id/btn_collect"
        android:layout_marginLeft="@dimen/middle_size"
        android:background="@drawable/detail_btn_selector"
        android:layout_marginTop="@dimen/smaller_size"
        android:text="收藏"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginBottom="@dimen/smaller_size"
        />

    <Button
        android:id="@+id/btn_downLoad"
        android:layout_marginLeft="@dimen/middle_size"
       android:layout_marginRight="@dimen/middle_size"
        android:background="@drawable/selector_app_detail_bottom_normal"
        android:text="下载"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <Button
        android:layout_marginRight="@dimen/middle_size"
        android:background="@drawable/detail_btn_selector"
        android:layout_marginBottom="@dimen/smaller_size"
        android:layout_marginTop="@dimen/smaller_size"
        android:text="分享"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_share"/>
</LinearLayout>